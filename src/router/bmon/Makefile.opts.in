SYS = @SYS@
ARCH = @ARCH@

CC = @CC@
DEBUG = @DEBUG@
STATIC = @STATIC@
BMON_LIB = @BMON_LIB@
LDFLAGS = @LDFLAGS@
CFLAGS = -DNEED_PRINTF @CFLAGS@
CPPFLAGS = @CPPFLAGS@

CURSES = @CURSES@
RRD = @RRD@
ASOUND = @ASOUND@
DBI = @DBI@

DEPFLAGS  += -M -I$(TOP)/bmon/libnl/include -I../include/ -I. $(CPPFLAGS)
CFLAGS    += -I../include/ -I.
MAKEFLAGS += --no-print-directory

prefix = @prefix@
mandir = @mandir@
sysconfdir = @sysconfdir@

CFLAGS += -D_GNU_SOURCE

ifeq ($(CC),gcc)
CFLAGS += -Wall
endif

ifeq ($(DEBUG),1)
CFLAGS += -g
endif

ifeq ($(STATIC),1)
LDFLAGS += -static
endif
