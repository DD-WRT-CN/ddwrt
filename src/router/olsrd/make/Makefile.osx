#
# MAC OSX SPECIFIC CONFIGURATION
#

# don't strip executables and bundles for now until we figure out the proper way
# to do it (flags).
STRIP = \#

DESTDIR ?=
LIBDIR =	$(DESTDIR)/usr/lib

SRCS +=		$(sort $(wildcard src/bsd/*.c src/unix/*.c src/mach/*.c))
HDRS +=		$(sort $(wildcard src/bsd/*.h src/unix/*.h src/mach/*.h))

LIBS +=		

PLUGIN_SONAME ?= $(PLUGIN_NAME)
PLUGIN_FULLNAME ?= $(PLUGIN_NAME).$(PLUGIN_VER).dylib
INSTALL_LIB =	install -m 755 $(PLUGIN_FULLNAME) $(LIBDIR)/$(PLUGIN_FULLNAME)
UNINSTALL_LIB =	rm -f $(LIBDIR)/$(PLUGIN_FULLNAME)

ifdef OLSRD_PLUGIN
LDFLAGS = -bundle -flat_namespace -undefined suppress
else
LDFLAGS = -dynamic
endif

OS_LIB_PTHREAD =
OS_CFLAG_PTHREAD =
OS_LIB_DYNLOAD =

