. "${srcdir=.}/init.sh"

case "$STRACE" in
	*valgrind\ *--suppressions=*)
		skip_ 'incompatible with valgrind' ;;
esac

fd0="$LOG.fd0"
fd1="$LOG.fd1"
fd2="$LOG.fd2"

check_prog touch

check_fd()
{
	local a1 a2 a3
	a1="$1"
	a2="$2"
	a3="$3"

	rm -f "$LOG" "$fd0" "$fd1" "$fd2"
	touch "$LOG" "$fd0" ||
		framework_skip_ 'failed to create files'

	set -- "\"../$NAME\"" "\"$1\"" "\"$2\"" "\"$3\""
	eval "$@" "<${a1:-&-}" ">${a2:-&-}" "2>${a3:-&-}" ||
			fail_ "$* failed with code $rc"

	set -- "$STRACE" -o"$LOG" -echdir "$@"
	eval "$@" "<${a1:-&-}" ">${a2:-&-}" "2>${a3:-&-}" ||
		dump_log_and_fail_with "$* failed with code $?"
}

check_fd "$fd0" "$fd1" "$fd2"
check_fd ''     "$fd1" "$fd2"
check_fd "$fd0" ''     "$fd2"
check_fd "$fd0" "$fd1" ''
check_fd ''     ''     "$fd2"
check_fd ''     "$fd1" ''
check_fd "$fd0" ''     ''
check_fd ''     ''     ''
